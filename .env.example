# Environment Configuration for Multi-Agent Task 3
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information

# ============================================
# Google Gemini API Configuration
# ============================================

# Your Google Gemini API Key
# Get it from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model Selection
# Options: gemini-2.5-flash, gemini-1.5-pro, gemini-1.5-flash
GEMINI_MODEL=gemini-2.5-flash

# ============================================
# Streamlit Configuration
# ============================================

# Enable/Disable components
ENABLE_RESEARCHER_AGENT=true
ENABLE_ANALYZER_AGENT=true
ENABLE_PLANNER_AGENT=true
ENABLE_EXECUTOR_AGENT=true

# Model Settings
TEMPERATURE=0.7
MAX_TOKENS=1024

# ============================================
# Deployment Configuration
# ============================================

# Deployment Environment
# Options: local, streamlit-cloud, docker, kubernetes
DEPLOYMENT_ENV=local

# Streamlit Cloud specific settings
STREAMLIT_CLOUD_APP_URL=https://your-app-name.streamlit.app

# ============================================
# Logging Configuration
# ============================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable console logging
CONSOLE_LOGGING=true

# ============================================
# Application Settings
# ============================================

# Application name
APP_NAME=Multi-Agent Task 3

# Version
APP_VERSION=1.0.0

# Debug mode
DEBUG=false

# ============================================
# Optional: Advanced Settings
# ============================================

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=300

# Task timeout in seconds
TASK_TIMEOUT=60

# Maximum retries for API calls
MAX_RETRIES=3

# ============================================
# Streamlit Cloud Secrets
# ============================================
# For Streamlit Cloud deployment, add secrets in the deployment settings:
# Name: GEMINI_API_KEY
# Value: your_actual_api_key
#
# Access in code using: st.secrets.get("GEMINI_API_KEY")
